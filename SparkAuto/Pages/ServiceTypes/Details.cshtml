@page
@model SparkAuto.Pages.ServiceTypes.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />

<h2 class="text-info">Service Type Details</h2>

<br />

<form method="post">
    <div class="backgroundwhite border">
        <input type="hidden" asp-for="ServiceType.Id" />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ServiceType.Name"></label>

            </div>
            <div class="col-5">
                <input asp-for="ServiceType.Name" class="form-control" disabled/>
            </div>
            <span asp-validation-for="ServiceType.Name" class="text-danger"></span>

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ServiceType.price"></label>

            </div>
            <div class="col-5">
                <input asp-for="ServiceType.price" class="form-control" disabled/>
            </div>
            <span asp-validation-for="ServiceType.price" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_DetailsAndBackToListButton" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}